{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "generator": "Visual Studio 18 2026",
      "hidden": true,
      "binaryDir": "${sourceDir}/build"
    },

    {
      "name": "Debug",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" },
      "hidden": true
    },
    {
      "name": "Release",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo"},
      "hidden": true
    },

    {
      "name": "MSVC",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_C_COMPILER": "cl.exe"
      }
    },
    {
      "name": "Clang CL",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang-cl.exe",
        "CMAKE_C_COMPILER": "clang-cl.exe"
      }
    },
    {
      "name": "Clang LLVM",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang.exe",
        "CMAKE_C_COMPILER": "clang.exe"
      }
    },

    { "name": "MSVC-Debug", "inherits": [ "base", "Debug", "MSVC" ] },
    { "name": "MSVC-Release", "inherits": [ "base", "Release", "MSVC" ] },
    { "name": "ClangCL-Debug", "inherits": [ "base", "Debug", "Clang CL" ] },
    { "name": "ClangCL-Release", "inherits": [ "base", "Release", "Clang CL" ] },
    { "name": "Clang-Debug", "inherits": [ "base", "Debug", "Clang LLVM" ] },
    { "name": "Clang-Release", "inherits": [ "base", "Release", "Clang LLVM" ] }
  ]
}
